{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "cortex debug",
            "cwd": "${workspaceRoot}",
            "executable": "./.build/${workspaceFolderBasename}.elf",
            "request": "launch",
            "preLaunchTask": "build",
            "type": "cortex-debug",
            "showDevDebugOutput": "raw",
            "armToolchainPath": "/opt/gcc-arm-none-eabi/bin",
            "servertype": "openocd",
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32g4x.cfg"
            ],
            "postLaunchCommands": [
                "monitor reset init",
                "monitor arm semihosting enable"
            ]
        }
    ]
}
